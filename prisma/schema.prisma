generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  createdAt DateTime @default(now())
  userId    String   
  response  Boolean  @default(false)
  adminResponses AdminMessage[] @relation("MessageAdminResponses")

  @@index([userId])
}

model Admin {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  adminId  String   @unique
  sentMessages AdminMessage[] @relation("AdminSentMessages")
}

model AdminMessage {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  content         String
  createdAt       DateTime @default(now())
  adminId         String   
  admin           Admin    @relation("AdminSentMessages", fields: [adminId], references: [adminId])
  clientMessageId String   @db.ObjectId
  clientMessage   Message  @relation("MessageAdminResponses", fields: [clientMessageId], references: [id])

  @@index([adminId])
  @@index([clientMessageId])
}
